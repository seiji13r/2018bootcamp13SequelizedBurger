
<div class="jumbotron main-jumbotron">
<h1>EAT-DA-BURGER!</h1>
<img src="assets/img/burger.png" alt="Burger Cartoon">
</div>

<main class="container">
  <div class="row">
    <div class="col-12 col-md-4 order-md-2 text-center">
      <h5 class="text-center">
      Order Here!!!
      </h5>
      <form class="create-burger-form" action="">
        <div class="form-group">
          {{!-- <label for="new-burger-input">New Burger Name</label> --}}
          <input type="input" class="form-control" id="new-burger-input" aria-describedby="newBurger" placeholder="Enter Burger Name">
          <small id="burgerHelp" class="form-text text-light">Enter Some Super Delicious Burger Name</small>
          <br>
          <button type="submit" class="btn btn-success add-burger">Submit</button>
        </div>
      </form>
      <br>
    </div>

    <div class="col-6 col-md-4 order-md-1">

      <h5 class="text-center">
      Not Devoured
      </h5>

      <div class="container">
      </div>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger/burger-block}}
          {{/unless}}
        {{/each}}

    </div>

    <div class="col-6 col-md-4 order-md-3">

      <h5 class="text-center">
      Devoured
      </h5>

      <div class="container">
      </div>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger/burger-block}}
          {{/if}}
        {{/each}}
    </div>

  </div>

</main>

